<div class="container">
  <h1>Dashboards</h1>

  <div class="booking"> 
    <% @bookings.each do |booking| %>
      <div class="bookings">
        <% if current_user == booking.parent %>
          <div class="nanny-card">
            <%= link_to user_path(booking.nanny), class:"hover-delete" do %>
              <div class="card-product">
                <%= cl_image_tag booking.nanny.photo.key, class:"card-product", crop: :fill %>
                <div class="card-product-infos">
                  <h2><%= booking.nanny.first_name %></h2>
                  <h5 class= "right">â‚¬<%= booking.nanny.price %></h5>
                  <p>Rating</p>
                </div>
              </div>
            <% end %> 
            <div class= "booking__btns">
            <% if booking.status == "pending" %>
                <%= link_to "accept", approve_booking_path(booking), method: :post, class: "btn btn-success mx-2" %>
                <%= link_to "decline", decline_booking_path(booking), method: :post, class: "btn btn-danger mx-2" %>
            <% else %>
              <%= link_to 'cancel booking', booking_path(booking), class: "btn btn-flat", method: :delete, data: { confirm: "Are you sure?" } %>
            <% end %>
            <a class="btn-primary">Edit</a>
            <a class="btn-primary">Delete</a>
            </div>
          </div>
        <% elsif current_user == booking.nanny %>
          <div class="parent-card">
            <div class="card-product">
              <%= cl_image_tag booking.parent.photo.key, class:"card-product", crop: :fill %>
              <div class="card-product-infos">
                <h2><%= booking.parent.first_name %></h2>
              </div>
            </div>
          </div>
            <%= booking.parent.first_name %> <%= booking.parent.last_name %>
            <%= booking.parent.number_of_kids %>
            <%= booking.start_date %>
            <%= booking.end_date %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div id="calendar" data-agenda="<%= @schedule %>" >    
  </div>
</div>


