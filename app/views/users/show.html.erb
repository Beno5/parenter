<div class="container">
 <%= link_to "Go back", :back, class: "btn btn-secondary" %>
 <br>
 <br>
 <div class="row">
    <div class="show-book-card">
      <div class="column">
        <div class="show-card">
          <div class="circle-show-page">
            <%= cl_image_tag @user.photo.key, class:"avatar-very-large1", width: 300, height: 300, crop: :fill %>
          </div>
          <div class="show-card__info">
            <i class="fas fa-star fa-lg"></i> 
            <i class="fas fa-star fa-lg"></i>
            <i class="fas fa-star fa-lg"></i>
            <i class="fas fa-star fa-lg"></i>
            <i class="fas fa-star fa-lg"></i>
          </div> 
          <div class="bio">
            <h2>Bio</h2>  
          </div>

          <ul class="details-list">
            <li class="large-font-show"><strong><%= @user.first_name %> <%= @user.last_name %></strong></li>
            <li><strong>Price: </strong><%= @user.price %> â‚¬/hour</li>
            <li><strong>Address: </strong><%= @user.address %></li>
            <li><strong>Max. capacity: </strong><%= @user.max_cap %></li>
            <li><strong>Age: </strong><%= Date.today.year - @user.year_of_birth%> years</li>
          </ul>
        </div>
        
      </div>
    </div>
    <div class="column" style="margin-left: auto;">
      <div class= "float-right">
        <%= simple_form_for @booking do |f| %>
          <% placedate = Date.tomorrow %>
          <%  placestartdate = DateTime.new(placedate.year, placedate.month, placedate.day).change(hour: 13).strftime("%Y-%m-%d %H:%M") %>
          <%  placeenddate = DateTime.new(placedate.year, placedate.month, placedate.day).change(hour: 15).strftime("%Y-%m-%d %H:%M") %>
          <%= f.input :start_date, placeholder: placestartdate.to_s, as: :string, required: true, input_html:{class: "datepicker"} %>
          <%= f.input :end_date, placeholder: placeenddate.to_s, as: :string, required: true, input_html:{class: "datepicker"} %>
          <%= f.input :nanny_id, as: :hidden, input_html: {value: params[:id]} %>
          <%= f.submit "BOOK", class: "btn btn-primary" %>
        <% end %>
      </div>   
    </div>
  </div>

  
  <div id="calendar" data-agenda="<%= @schedule %>" >
  </div>
    
</div>

<%#= javascript_pack_tag 'init_calendar', 'data-turbolinks-track': 'reload', defer: true %>
