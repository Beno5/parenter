<div class="show-book-card">
  <div class="book-card">
    <%= simple_form_for @booking do |f| %>
      <%= f.input :start_date, as: :string, required: true, input_html:{class: "datepicker"} %>
      <%= f.input :end_date, as: :string, required: true, input_html:{class: "datepicker"} %>
      <%= f.input :nanny_id, as: :hidden, input_html: {value: params[:id]} %>
      <%= f.submit "BOOK", class: "btn btn-primary" %>
    <% end %>


    <div class="show-card">
      <%= cl_image_tag @user.photo.key, class:"avatar-very-large", crop: :fill %>
      <ul>
        <li>Name: <%= @user.first_name %> <%= @user.last_name %></li>
        <li>Price: <%= @user.price %> â‚¬/h</li>
        <li>Max. capacity: <%= @user.max_cap %></li>
        <li>Number of kids: <%= @user.number_of_kids %></li>
        <li>Age: <%= Date.today.year - @user.year_of_birth%> years</li>
      </ul>

      <div class="show-card__info">
        <i class="fas fa-star"></i> 
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
      </div> 

    </div>
  </div>
  
  <div id="calendar" data-agenda="<%= @schedule %>" >
  </div>
    
</div>

<%#= javascript_pack_tag 'init_calendar', 'data-turbolinks-track': 'reload', defer: true %>