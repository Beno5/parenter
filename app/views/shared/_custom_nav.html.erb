<div class="navbar navbar-expand-sm navbar-light custom_nav_color">
  <%= link_to root_path, class: "navbar-brand", style: "max-width:100px; margin-top: -7px;" do %>
    
  <% end %>
  <% if user_signed_in? %>
    <ul class="navbar-nav">
      <li class="nav-item ">
        <%= link_to "Home", root_path, class: "nav-link-custom" %>
      </li>
     
      <li class>
        <%= link_to "Find Nanny", users_path, class: "nav-link-custom" %>
      </li>
      <li class>
        <%= link_to "My Dashboard", dashboards_path, class: "nav-link-custom" %>
      </li>
    </ul>
  <div class="nav-item dropdown center-alignment">
    <div class="circle-navbar dropdown-toggle", id= "navbarDropdown", data-toggle= "dropdown" , aria-haspopup= true, aria-expanded= false>
         <% if current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key, class: "avatar-very-large1", width: 300, height: 300, :gravity=>"face", crop: :thumb %>
         <% else %>
         <%= image_tag("question_mark", size: "50x50")%>    
         <% end %>
      </div>
      <div class="font-white">
        <%= current_user.first_name %>
      </div>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <%= link_to "My Profile", "/users/edit", class: "dropdown-item" %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
    </div>
  <% else %>
    <ul class="navbar-nav unsigned-nav ul2">
      <li>
        <%= link_to "Home", root_path, class: "nav-link-custom" %>
      </li>
      <li class="font-white">
        <%= link_to "Find Nanny", users_path, class: "nav-link-custom" %>
      </li>
      <li >
        <%= link_to "My Dashboard", dashboards_path, class: "nav-link-custom" %>
      </li>
      <li>
        <%= link_to "Log in", new_user_session_path, class: "nav-link-custom" %>
      </li>
    </ul>
  <% end %>
</div>
